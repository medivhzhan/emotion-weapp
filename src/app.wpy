<script>
import wepy from 'wepy'
import { BaseURL } from './config'
import 'wepy-async-function'

export default class extends wepy.app {
  config = {
    pages: ['pages/index', 'pages/action', 'pages/circle'],
    window: {
      backgroundTextStyle: 'light',
      navigationBarBackgroundColor: '#69c3aa',
      navigationBarTitleText: '表情演员',
      navigationBarTextStyle: 'white'
    }
  }

  globalData = {
    token: '', // JWT token
    uptoken: '', // 七牛文件上传 token
    user: {
      id: 0,
      city: '',
      gender: 0,
      avatar: '',
      country: '',
      nickname: ''
    },
    appCode: '' // 小程序码本地存放路径
  }

  constructor() {
    super()
    this.use('requestfix')
  }

  async onLaunch() {
    wepy.showShareMenu()
    const expire = await this.checkAuth()
    if (!this.globalData.token || expire) {
      this.globalData.token = await this.login()
    }
  }

  // 检查 access_key 是否过过期
  checkAuth() {
    return new Promise((resolve, reject) => {
      wepy.checkSession({
        success() {
          resolve(false)
        },
        fail() {
          resolve(true)
        }
      })
    })
  }

  // 登录
  login() {
    return new Promise((resolve, reject) => {
      wepy.login({
        success: res => {
          if (res.code) {
            // 获取token
            wepy.request({
              method: 'POST',
              url: `${BaseURL}/token`,
              data: { code: res.code },
              success: res => {
                if (res.data.token) {
                  resolve(res.data.token)
                }
              },
              fail: err => {
                console.error(err)
              }
            })
          }
        }
      })
    })
  }

  // 同步获取授权认证请求头
  authHeader() {
    return new Promise(resolve => {
      if (!this.globalData.token) {
        // dev: 判断是否过期
        const timer = setInterval(() => {
          if (this.globalData.token) {
            resolve({ Authorization: `Bearer ${this.globalData.token}` })
            clearInterval(timer)
          }
        }, 50)
      } else {
        resolve({ Authorization: `Bearer ${this.globalData.token}` })
      }
    })
  }

  // 获取七牛上传图片token
  async uptoken() {
    return new Promise(async resolve => {
      if (!this.globalData.uptoken) {
        // dev: 判断是否过期
        wepy.request({
          method: 'GET',
          url: `${BaseURL}/auth/uptoken`,
          header: await this.authHeader(),
          success: res => {
            this.globalData.uptoken = {
              token: res.data.token,
              expire: res.data.expire,
              region: res.data.region,
              domain: res.data.domain
            }
            resolve(this.globalData.uptoken)
          }
        })
      } else {
        resolve(this.globalData.uptoken)
      }
    })
  }

  getUserInfo() {
    return new Promise(resolve => {
      if (this.globalData.user.nickname) {
        resolve(this.globalData.user)
        return
      }

      wepy.getUserInfo({
        success: res => {
          const { avatarUrl, gender, nickName, city, country } = res.userInfo
          this.globalData.user.city = city
          this.globalData.user.gender = gender
          this.globalData.user.country = country
          this.globalData.user.avatar = avatarUrl
          this.globalData.user.nickname = nickName
          resolve(this.globalData.user)
        }
      })
    })
  }

  getAppCode() {
    return new Promise(async resolve => {
      if (this.globalData.appCode) {
        resolve(this.globalData.appCode)
      } else {
        wepy.request({
          method: 'GET',
          url: `${BaseURL}/auth/share/code`,
          header: await this.authHeader(),
          success: res => {
            if (res.data.url) {
              wepy.downloadFile({
                url: res.data.url,
                success: res => {
                  // 只要服务器有响应数据，就会把响应内容写入文件并进入 success 回调，业务需要自行判断是否下载到了想要的内容
                  if (res.statusCode === 200) {
                    wepy.saveFile({
                      tempFilePath: res.tempFilePath,
                      success: res => {
                        this.globalData.appCode = res.savedFilePath
                        resolve(res.savedFilePath)
                      }
                    })
                  }
                }
              })
            }
          }
        })
      }
    })
  }

  // 全局分享设置
  // imageUrl 分享图片路径
  shareAppMessage(imageUrl = null) {
    return {
      path: `/pages/index?inviter=${this.globalData.user.id}`,
      imageUrl,
      title: '试试你的演技值多少分',
      fail: res => {
        wepy.showToast({
          title: '装逼失败 请重试',
          icon: 'none'
        })
      }
    }
  }
}
</script>

